<body>
    <div class="container">
        <div class="watermark">DEWA DEVELOPER</div>
        <div class="decoration heart">‚ù§Ô∏è</div>
        <div class="decoration star">‚≠ê</div>
        <div class="decoration flower">üå∏</div>
        <div class="decoration butterfly">ü¶ã</div>
        <div class="sparkles"></div>
        <h1>Pesan Untukmu <span id="emoji">‚ú®</span></h1>
        <p id="pesan">Hai cantik, mau baca pesan dariku?</p>
        <button onclick="nextPesan()">Klik ini cantik</button>
    </div>

    <script>
        const pesanList = [
            "Selamat malam! Semoga harimu menyenangkan.",
            "Senang bisa bertemu dan mengenalmu hari ini.",
            "Sudah waktunya istirahat. Jangan lupa tidur ya!",
            "Semangat untuk besok! Kamu pasti bisa menghadapi hari dengan baik.",
            "Terima kasih sudah membaca pesan-pesan ini. Selamat malam!"
        ];

        let currentPesan = -1;
        const pesanElem = document.getElementById('pesan');
        const buttonElem = document.querySelector('button');

        function nextPesan() {
            currentPesan++;
            if (currentPesan < pesanList.length) {
                pesanElem.textContent = pesanList[currentPesan];
                buttonElem.textContent = "Lanjut";
                if (currentPesan === pesanList.length - 1) {
                    buttonElem.textContent = 'Selesai';
                }
            } else {
                pesanElem.textContent = "See you cantik";
                buttonElem.style.display = 'none';
            }
        }

        // Membuat efek sparkle
        const sparklesContainer = document.querySelector('.sparkles');
        for (let i = 0; i < 50; i++) {
            const sparkle = document.createElement('div');
            sparkle.classList.add('sparkle');
            sparkle.style.left = `${Math.random() * 100}%`;
            sparkle.style.top = `${Math.random() * 100}%`;
            sparkle.style.animationDelay = `${Math.random() * 1.5}s`;
            sparklesContainer.appendChild(sparkle);
        }
    </script>
